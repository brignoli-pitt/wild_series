{% extends 'base.html.twig' %}

{% block title %}Season #{{ season.number }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}_S{{ season.number }}: Episode_{{ episode.number }}</h1>
            <p>{{ episode.title }}</p>
            <p>Synopsis: {{ episode.synopsis }}</p>
        </div>
    </div>

    <a href="{{ path('program_app_program_season_show', {programId : program.id, seasonId : season.id}) }}">
        Retour à la liste des séries du programme
    </a>
{% endblock %}